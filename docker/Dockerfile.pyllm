FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create logs directory
RUN mkdir -p /app/logs

# Copy the PyLLM package
COPY pyllm /app/pyllm

# Copy the fixed API file
COPY docker/pyllm_api_fix.py /app/pyllm/pyllm/api.py

# Install dependencies
RUN pip install --no-cache-dir -r pyllm/requirements.txt
RUN pip install --no-cache-dir fastapi uvicorn

# Install the package in development mode
WORKDIR /app/pyllm
RUN pip install -e .
WORKDIR /app

# Expose the API port
EXPOSE 8001

# Add health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8001/health || exit 1

# Command to run the API server
CMD ["python", "-m", "pyllm.pyllm.api", "--host", "0.0.0.0", "--port", "8001"]
